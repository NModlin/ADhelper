{
  "name": "adhelper-app",
  "version": "1.0.0",
  "description": "Modern desktop application for Active Directory and Jira management",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "node dev-start.js",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development npx electron .",
    "build": "npm run build:main && npm run build:renderer && electron-builder",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:win": "npm run build -- --win",
    "preview": "vite preview",
    "compile": "npm run build:main",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NModlin/ADhelper.git"
  },
  "keywords": [
    "active-directory",
    "jira",
    "electron",
    "admin-tools"
  ],
  "author": "NModlin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NModlin/ADhelper/issues"
  },
  "homepage": "https://github.com/NModlin/ADhelper#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "jsdom": "^28.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "axios": "^1.13.2",
    "notistack": "^3.0.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "com.adhelper.app",
    "productName": "ADHelper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts",
        "filter": [
          "**/*.ps1",
          "**/*.psm1"
        ]
      },
      {
        "from": "config",
        "to": "config",
        "filter": [
          "*.json"
        ]
      },
      {
        "from": "public",
        "to": "public",
        "filter": [
          "*.ico",
          "*.png",
          "*.svg"
        ]
      },
      "ADhelper.ps1"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
